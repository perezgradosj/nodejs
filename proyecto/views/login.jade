extends ./layout.jade
block contenido
	form(action="/users" method="POST")
		div(class="form-group")
			label(for="email") Email
			input(type="text" name="email" placeholder="Ingrese su email" id="email" class="form-control")
		div(class="form-group")
			label(for="clave") Clave
			input(type="password" name="clave" placeholder="Ingrese su clave" id="clave" class="form-control")
		div(class="form-group")
			input(type="submit" value="Ingresar" class="btn btn-primary")